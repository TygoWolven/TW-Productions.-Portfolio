---
interface Props {
	href: string;
	title: string;
	body: string;
}

const { href, title, body } = Astro.props;
---

<a href={href}>
	<h2>
		{title}
	</h2>
	<p>
		{body}
	</p>
</a>

<style>
	a {
		width: 70%;
		align-self: center;
		justify-content: center;
	}
	h2 {
		font-size: 2.5rem;
		letter-spacing: 1px;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-transform: uppercase;
	}
</style>
